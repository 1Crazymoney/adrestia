# https://EditorConfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

[*.hs]
indent_size = 4
max_line_length = 80

[*.nix]
indent_size = 2
max_line_length = 100

[stack.yaml]
trim_trailing_whitespace = false

# Trailing whitespace is syntax in Markdown!
[*.md]
trim_trailing_whitespace = false
